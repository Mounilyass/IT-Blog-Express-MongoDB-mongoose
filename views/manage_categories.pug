extends layout

block content
  .container
    .row
      .col-md-8
        br
        br
        h1 #{title}
        br
      .col-md-3
        br
        br
        a(class="btn btn-primary create-btn", href="/manage/categories/add") Add Category
        br
        br
    != messages()
    table(class='table table-striped')
      tr
        th Category Title
        th
      each category, i in categories
        tr
          td #{category.title}
          td
            a(class="btn btn-tiny btn-default" href='/manage/categories/edit/'+category._id) Edit
